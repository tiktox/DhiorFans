rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ===== REGLAS ULTRA PERMISIVAS PARA DESARROLLO =====
    
    // Usuarios - Acceso completo
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Posts - Acceso completo
    match /posts/{postId} {
      allow read, write: if true;
    }
    
    // Reels - Acceso completo
    match /reels/{reelId} {
      allow read, write: if true;
    }
    
    // Comentarios - Acceso completo
    match /comments/{commentId} {
      allow read, write: if true;
    }
    
    // Likes - Acceso completo
    match /likes/{likeId} {
      allow read, write: if true;
    }
    
    // Follows - Acceso completo
    match /follows/{followId} {
      allow read, write: if true;
    }
    
    // Tokens - Acceso completo
    match /tokens/{userId} {
      allow read, write: if true;
    }
    
    // Transacciones de tokens - Acceso completo
    match /tokenTransactions/{transactionId} {
      allow read, write: if true;
    }
    
    // Reportes - Acceso completo
    match /reports/{reportId} {
      allow read, write: if true;
    }
    
    // Notificaciones - Acceso completo
    match /notifications/{notificationId} {
      allow read, write: if true;
    }
    
    // Configuraciones de usuario - Acceso completo
    match /userSettings/{userId} {
      allow read, write: if true;
    }
    
    // Regla catch-all para cualquier otra colecci√≥n
    match /{document=**} {
      allow read, write: if true;
    }
  }
}