rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permitir lectura p√∫blica de archivos
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Permitir escritura solo a usuarios autenticados en la carpeta uploads
    match /uploads/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
